<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/slide_image"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <LinearLayout
                android:id="@+id/dot_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/model_1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/background_fill_1"
                        android:backgroundTint="#000000"
                        android:fontFamily="casual"
                        android:padding="4dp"
                        android:text="Women's Jewellery"
                        android:textAlignment="center"
                        android:textColor="@color/colorGold"
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txt_women_ring"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Rings"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_women_earring"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Earrings"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_women_pendents"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Pendants"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_women_bangles"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Bangles"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_women_nosepin"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Nose pin"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_women_chain"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Chains"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txt_women_payal"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Payal"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_women_all"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="View All"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/model_2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="monospace"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/background_fill_1"
                        android:backgroundTint="#000000"
                        android:text="Men's Jewellery"
                        android:textAlignment="center"
                        android:textColor="@color/colorGold"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txt_men_ring"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Rings"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_men_chain"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Chains"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_men_kada"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Kada"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_men_bracelets"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Bracelets"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_men_all"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="View All"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/model_3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/background_fill_1"
                        android:backgroundTint="#000000"
                        android:text="Kid's Jewellery"
                        android:textAlignment="center"
                        android:textColor="@color/colorGold"
                        android:fontFamily="monospace"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txt_kid_earring"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Earrings"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_kid_necklace"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Necklaces"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_kid_pendant"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Pendants"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_kid_bracelets"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="Bracelets"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_kid_all"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/empty_round_background_dark"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_next"
                        android:paddingStart="10dp"
                        android:text="View All"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/img_1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trending categories"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/middle"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/middle"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/tt_k_gold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorAccentTrans"
                            android:padding="5dp"
                            android:text="22 Kt Gold"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:id="@+id/mangalsutra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorAccentTrans"
                            android:padding="5dp"
                            android:text="Mangalsutra"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/pendant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorAccentTrans"
                            android:padding="5dp"
                            android:text="Pendants"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_toRightOf="@id/middle"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/ring"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorAccentTrans"
                            android:padding="5dp"
                            android:text="Rings"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/chains"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorAccentTrans"
                            android:padding="5dp"
                            android:text="Chains"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/bangles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/colorAccentTrans"
                            android:padding="5dp"
                            android:text="Bangles"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>