<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditImageActivity"
    android:background="@color/colorAccentTrans"
    android:backgroundTint="@color/colorPrimaryLight">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/edit_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:id="@+id/old_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <Button
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/cancel_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_fill_1"
            android:text="Cancel"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_image_remove_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/cancel_btn"
            android:background="@drawable/background_fill_1"
            android:text="Remove"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_image_change_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/cancel_btn"
            android:background="@drawable/background_fill_1"
            android:text="Change"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>